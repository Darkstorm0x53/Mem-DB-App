<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateDBTest"
    >

    <TextView
        android:id="@+id/TextHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Text_Header"
        android:gravity="center"
        android:layout_margin="10sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/teal_200"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/inputBrandName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Enter OEM"
        />
    <EditText
        android:id="@+id/inputSubBrandName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Enter Series"
        />
    <EditText
        android:id="@+id/inputRamSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Enter Clock-speed"
        />
    <EditText
        android:id="@+id/inputDieType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Enter Die-type"
        />

    <Button
        android:id="@+id/ButtonAddDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="@string/ButtonAdd"
        android:textAllCaps="false"
        />

</LinearLayout>